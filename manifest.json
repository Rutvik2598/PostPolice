{
  "manifest_version": 3,
  "name": "PostPolice",
  "version": "1.0.0",
  "description": "Detects and extracts tweet text from Twitter/X",
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
